<% if !@current_user.nil? %>
  <div>
    <form action="/session" method="POST">
      <input type="hidden"
             name="authenticity_token"
             value="<%= form_authenticity_token %>">

      <input type="hidden" value="delete" name="_method" />
      <input type="submit" value="Logout" />
    </form>
  </div>
<% end %>
<div id="content">
</div>
